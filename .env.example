# ─────────────────────────────────────────────
# SwarmGPT Provider Configuration
# Copy this file to .env and fill in your keys
# ─────────────────────────────────────────────

# ── Ollama (local) ──────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=tinyllama

# ── OpenAI ──────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
# Max concurrent requests (OpenAI Tier 1 = 500 RPM, 20 is safe)
OPENAI_MAX_CONCURRENT=20

# ── Anthropic ───────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-haiku-4-5-20251001
# Max concurrent requests (Anthropic Tier 1 = 50 RPM, keep ≤ 15)
ANTHROPIC_MAX_CONCURRENT=15

# ── Swarm Defaults ───────────────────────────
SWARM_AGENTS=20
SWARM_ITERATIONS=5
SWARM_MAX_TOKENS=300
SWARM_TEMP_MIN=0.3
SWARM_TEMP_MAX=1.2

# ── Mixed Swarm Agent Allocation ─────────────
# Only used when multiple providers are active.
# Comma-separated weights will be normalized to sum to num agents.
# Example: 10 Ollama + 5 OpenAI + 5 Anthropic agents
SWARM_PROVIDER_WEIGHTS=ollama:10,openai:5,anthropic:5
